@model ThreadDetailsViewModel

@{
    ViewData["Title"] = @Model.Thread.Title;
}

<nav>
    <ul class="pw-breadcrumb">
        <li class="pw-breadcrumb-item">
            <a class="pw-breadcrumb-link" href="@Url.Action("Index", "Home")">Home</a>
        </li>
        <li class="pw-breadcrumb-item">
            <a class="pw-breadcrumb-link"
                href="@Url.Action("Details", "Subcategory", new { id = Model.Subcategory.Id })">
                @Model.Subcategory.Name
            </a>
        </li>
        <li class="pw-breadcrumb-item active">
            @Model.Thread.Title
        </li>
    </ul>
</nav>

<h1>@Model.Thread.Title</h1>

<div class="pw-card fluid mb-4">
    <div class="thread">
        <div class="thread__user">
            <div class="thread__user__info">
                <div class="thread__user__username">
                    <a>
                        @Model.Thread.User.Username
                    </a>
                </div>
                <div class="thread__user__group">
                    Member
                </div>
            </div>
            <div class="thread__user__details">
                <div class="thread__user__details__row">
                    <div class="thread__user__details__label">Posts:</div>
                    <div class="thread__user__details__value">@Model.Thread.User.PostCount</div>
                </div>
            </div>
        </div>
        <div class="thread__main">
            <div class="thread__content">
                @Model.Thread.Content
            </div>
        </div>
    </div>
</div>