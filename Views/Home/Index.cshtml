@{
    ViewData["Title"] = "Index";
}

@model IndexViewModel;

@foreach (var category in Model.Categories)
{
    <div class="pw-card fluid mb-4">
        <div class="pw-table-container">
            <table class="pw-table">
                <thead>
                    <tr>
                        <th>@category.Name</th>
                        <th>Threads</th>
                        <th>Posts</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var subcategory in category.Subcategories)
                    {
                        <tr>
                            <td>
                                <a asp-controller="Subcategory" asp-action="Details" asp-route-id="@subcategory.Id">
                                    @subcategory.Name
                                </a>
                                <div>@subcategory.Description</div>
                            </td>
                            <td>@subcategory.ThreadCount</td>
                            <td>@subcategory.PostCount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
